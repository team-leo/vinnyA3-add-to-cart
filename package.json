{
  "name": "amazonas-product-cart",
  "version": "1.0.0",
  "description": "A clone of Amazon\\'s product add to cart",
  "author": "vinnyA3",
  "license": "MIT",
  "engines": {
    "node": ">=10.15.0"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "lint": "eslint ./client/src/**/*.js",
    "lint:watch": "esw ./client/src/**/*.js",
    "client:dev": "webpack-dev-server --env.API_URL='http://localhost:8000' --config webpack.config.js",
    "server:dev": "NODE_PATH=./server nodemon server/index.js",
    "clean:dist": "rimraf ./dist",
    "dev": "npm-run-all --parallel client:dev server:dev",
    "build": "npm run clean:dist && webpack --env.API_URL='http://ec2-52-87-193-146.compute-1.amazonaws.com' -d",
    "seed": "node --max-old-space-size=8192 ./server/db/mongodb/seedProduct.js",
    "seed-review": "node ./server/db/mongodb/seedReview.js",
    "seed-pg": "node ./server/db/postgres/seedReview.js",
    "seed-pg-product": "node --max-old-space-size=8192 ./server/db/postgres/seedProduct.js",
    "reset-db": "node ./server/db/postgres/makeDatabase.js",
    "mongodb": "mongod --nojournal &amp;",
    "start": "NODE_PATH=./server node server/index.js"
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "**/*.{js, jsx}",
      "!**/node_modules/**",
      "!./public/**"
    ],
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 80,
        "lines": 50,
        "statements": -10
      }
    }
  },
  "dependencies": {
    "axios": "^0.18.0",
    "cluster": "^0.7.7",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "memory-cache": "^0.2.0",
    "mongodb": "^3.1.13",
    "mongoose": "^5.4.16",
    "pg": "^7.8.1",
    "pg-promise": "^8.6.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "sqlite3": "^4.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "artillery": "^1.6.0-27",
    "babel-loader": "^8.0.5",
    "css-loader": "^2.1.0",
    "eslint": "^5.13.0",
    "eslint-config-hackreactor": "git://github.com/reactorcore/eslint-config-hackreactor",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-watch": "^4.0.2",
    "faker": "^4.1.0",
    "jest": "^24.1.0",
    "morgan": "^1.9.1",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "performance-now": "^2.1.0",
    "prettier": "^1.16.4",
    "puppeteer-core": "^1.12.2",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.1.0",
    "sass-resources-loader": "^2.0.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.29.1",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14"
  }
}
